set $mod Mod4

# Input
input type:keyboard {
    xkb_layout "pl"
}

# Output
output * bg /usr/share/backgrounds/sway/Sway_Wallpaper_Blue_1920x1080.png fill

output DP-4 {
    mode 2560x1440@74.924Hz
    transform 270
}

output HDMI-A-2 {
    mode 3440x1440@99.992Hz
    pos 0 0
}

exec_always xrandr --output HDMI-A-2 --primary

# Startup
exec --no-startup-id waybar
exec --no-startup-id mako
exec --no-startup-id dbus-update-activation-environment --all
exec --no-startup-id gnome-keyring-daemon --start --components=secrets
exec --no-startup-id nm-applet --sm-disable

# Exceptions
for_window [title="Pumpkin Engine"] floating enable, move container to workspace 1;

# Keybinds
bindsym $mod+Return exec alacritty
bindsym $mod+d exec wmenu-run
bindsym $mod+w exec --no-startup-id swaylock
bindsym --release $mod+Shift+s exec grim -g "$(slurp)" - | wl-copy

bindsym $mod+Shift+q kill
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+f fullscreen

bindsym $mod+b splith
bindsym $mod+v splitv

bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

bindsym XF86MonBrightnessUp   exec --no-startup-id brightnessctl s +30
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl s 30-
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMicMute     exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle
bindsym XF86AudioMute        exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle

focus_follows_mouse no
focus_wrapping no

# Movement
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+Ctrl+h resize grow width 20 px
bindsym $mod+Ctrl+j resize shrink height 20 px
bindsym $mod+Ctrl+k resize grow height 20 px
bindsym $mod+Ctrl+l resize shrink width 20 px

bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10

bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10

# Colors
set $color0       #1e1e1e
set $color1       #f44747
set $color2       #608b4e
set $color3       #dcdcaa
set $color4       #569cd6
set $color5       #c678dd
set $color6       #56b6c2
set $color7       #d4d4d4
set $color8       #808080
set $color9       #f44747
set $color10      #608b4e
set $color11      #dcdcaa
set $color12      #569cd6
set $color13      #c678dd
set $color14      #56b6c2
set $color15      #d4d4d4
set $foreground   #d4d4d4
set $background   #1e1e1e set $cursorColor  #d4d4d4

#      class             border  bg      text    indicator  child border
client.focused           $color6 $color6 $color0 $color6    $color6
client.focused_inactive  $color8 $color8 $color0 $color8    $color8
client.unfocused         $color8 $color0 $color8 $color8    $color8
client.focused_tab_title $color6 $color0 $color6
client.urgent            $color3 $color0 $color3 $color8    $color8
client.placeholder       $color6 $color0 $color6 $color6    $color8
client.background        $color6

font pango:DejaVu Sans Mono 10
default_border pixel 1
default_floating_border pixel 1

